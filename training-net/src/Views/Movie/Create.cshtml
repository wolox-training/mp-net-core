<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Movie</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label  asp-for="Genre" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Genre" class="form-control" type="text" id="Genre" name="Genre"/>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label  asp-for="Price" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" type="text" id="Price" name="Price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label  asp-for="ReleaseDate" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="ReleaseDate" class="form-control" type="text" id="ReleaseDate" name="ReleaseDate"/>
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label  asp-for="ReleaseDate" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" type="text" id="Title" name="Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>