@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using training_net.Repositories.Database
@using Microsoft.AspNetCore.Identity
@model training_net.Models.Views.UserManagementViewModel

<h3>@Localizer["Users"]</h3>
<p>@Localizer["UsersManagementMsg"]</p>
<table class="table">
    <thead>
        <tr>
            <th>@Localizer["UserName"]</th>
            <th>@Localizer["Email"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@Html.DisplayFor(model => user.UserName)</td>
                <td>@Html.DisplayFor(model => user.Email)</td>
            </tr>
        }
    </tbody>
</table>
